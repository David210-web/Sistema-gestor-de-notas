@model IEnumerable<GestionDeNotas.Models.Profesor>

@{
    ViewBag.Title = "Listado de docentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-2">@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fa fa-add"></i> Agregar docente
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Carnet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoDocente)
        </th>
        <th>
            Acciones
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Carnet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoDocente)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { carnet = item.Carnet })" class="btn btn-primary">
                <i class="fa fa-edit"></i>
            </a> |
            <a href="@Url.Action("Details", new { carnet = item.Carnet })" class="btn btn-info">
                <i class="fa fa-info-circle"></i>
            </a> |
            <a href="@Url.Action("Delete", new { carnet = item.Carnet })" class="btn btn-danger">
                <i class="fa fa-trash"></i>
            </a>
        </td>
    </tr>
}

</table>

<a href="@Url.Action("Index","Admin")" class="btn btn-light">
    <i class="fa fa-home"></i> Volver
</a>
